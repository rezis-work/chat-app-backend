# Test Environment Configuration
# Copy this file to .env.test and update with your test database credentials

NODE_ENV=test
PORT=3001

# Test Database URL - Use a separate database for tests
# Example: postgresql://postgres:postgres@localhost:5433/chatapp_test?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/chatapp_test?schema=public

# Redis URL (can be same as dev for tests)
REDIS_URL=redis://localhost:6379

# Test secrets (can be different from production)
JWT_ACCESS_SECRET=test_access_secret_change_me
JWT_REFRESH_SECRET=test_refresh_secret_change_me
COOKIE_SECRET=test_cookie_secret_change_me

# Token TTLs (can be shorter for faster tests)
ACCESS_TOKEN_TTL=900000
REFRESH_TOKEN_TTL=604800000
